{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss",
    "stylelint-config-recess-order",
    "stylelint-prettier/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "customSyntax": "postcss-html"
    }
  ],
  "rules": {
    "prettier/prettier": true
  }
}